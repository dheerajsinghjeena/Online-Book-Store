<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Books-collection</title>
    <link rel="stylesheet" href="./asserts/css/main.css">
    <link rel="stylesheet" href="./asserts/css/all_collection.css">
</head>

<body>
    <!-- include for header file-->
    <%- include('./common/header.ejs') %>

        <!-- page navigation -->
        <div class="container-fluid">
            <div class="row collection-navigation">
                <div class="col-12 mt-5">
                    <h1 class="text-center text-white">All Collection</h1>
                    <h5 class="text-center text-white">Home/ Collection</h5>
                </div>
            </div>
        </div>

        
        
        <section class="collection">
            <div class="container-fluid">
                <div class="row mt-4">
                    <!-- books description -->
                    <% if(viewData.length> 0){ %>
                        <% for(var i=0; i < viewData.length; i++){%>
                            <div class="col-md-3 col-sm-6 mt-3">
                                    <div class="card text-center card1 w-100">
                                        <img src="/<%= viewData[i].image %>" alt="auto biography" class="w-100">
                                        <div class="card-body">
                                            <h6 class="card-title text-capitalize">
                                                <%= viewData[i].bookType %>
                                            </h6>
                                            <!-- <button><a href="" >View More</a></button> -->
                                            <!-- <%= console.log(viewData[i].bookType) %> -->
                                            <% if(viewData[i].bookType == "biography"){%>
                                                <a href="/autobiography" class="text-decoration-none" target="_blank"><button class="btn btn-primary">Show Books</button></a>
                                            <%} %>

                                            <% if(viewData[i].bookType == "kids"){%>
                                                <a href="/kids-comic" class="text-decoration-none" target="_blank"><button class="btn btn-primary">Show Books</button></a>
                                            <%} %>

                                            <% if(viewData[i].bookType == "literature"){%>
                                                <a href="/literature" class="text-decoration-none" target="_blank"><button class="btn btn-primary">Show Books</button></a>
                                            <%} %>

                                            <% if(viewData[i].bookType == "fiction"){%>
                                                <a href="/fiction" class="text-decoration-none" target="_blank"><button class="btn btn-primary">Show Books</button></a>
                                            <%} %>

                                            <% if(viewData[i].bookType == "love and romance"){%>
                                                <a href="/love" class="text-decoration-none" target="_blank"><button class="btn btn-primary">Show Books</button></a>
                                            <%} %>

                                            <% if(viewData[i].bookType == "cooking"){%>
                                                <a href="/cooking" class="text-decoration-none" target="_blank"><button class="btn btn-primary">Show Books</button></a>
                                            <%} %>

                                            <% if(viewData[i].bookType == "share market"){%>
                                                <a href="/share-market" class="text-decoration-none" target="_blank"><button class="btn btn-primary">Show Books</button></a>
                                            <%} %>

                                            <% if(viewData[i].bookType == "travel"){%>
                                                <a href="/tour-travel" class="text-decoration-none" target="_blank"><button class="btn btn-primary">Show Books</button></a>
                                            <%} %>
                                        </div>
                                    </div>
                            </div>
                            <%} %>
                                <%} else{%> No Record Found <%} %>

                </div>
            </div>
        </section>

        <!-- include for footer file-->
        <footer>
            <%- include('./common/footer.ejs') %>
        </footer>
</body>

</html>