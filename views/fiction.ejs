<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Fiction-collection</title>
    <link rel="stylesheet" href="./asserts/css/main.css">
    <link rel="stylesheet" href="./asserts/css/fiction.css">
</head>

<body>
    <!-- include for header file-->
    <%- include('./common/header.ejs') %>
    
    <!-- page navigation -->
    <div class="container-fluid">
        <div class="row fiction-navigation">
            <div class="col-12 mt-5">
                <h1 class="text-center text-white">Fiction</h1>
                <h5 class="text-center text-white">Home/Collection/Fiction</h5>
            </div>
        </div>
    </div>

    <section class="fiction">
        <div class="container-fluid">
            <h1 class="text-center collection-heading">Fiction</h1>
            <div class="row">
                <div class="col-3">
                    <%- include('./common/filter.ejs') %>
                </div>

                <div class="col-9">
                        <!-- book for fiction -->
                        <% if(viewData.length> 0){ %>
                            <% for(var i=0; i < viewData.length; i++){%>
                        <div class="col-md-4 col-sm-6 mt-3">
                            <div class="card text-center card1">
                                <img src="/<%= viewData[i].image %>" class="card-img-top" style="height: 300px" />
                                <div class="card-body">
                                    <p class="card-title">
                                        <%= viewData[i].bookName %>
                                    </p>
                                    <h6>By: <%= viewData[i].bookAuthor %></h6>

                                    <a href="/view_book/<%= viewData[i]._id %>" class="btn btn-primary" target="_blank"
                                        role="button">View more</a>

                                </div>
                            </div>
                        </div>
                        <%} %>
                                <%} else{%> No Record Found <%} %>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- include for footer file-->
    <footer>
        <%- include('./common/footer.ejs') %>
    </footer>
</body>

</html>